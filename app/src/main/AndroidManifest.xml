<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Interview01"
        tools:targetApi="31" >
        <activity
            android:name=".topic.recyclerview.RecyclerViewActivity"
            android:exported="true" />
        <activity
            android:name=".topic.viewbinding.ViewBindingActivity"
            android:exported="true" />
        <activity
            android:name=".topic.fragment.FragmentActivity"
            android:exported="false"
            android:label="@string/title_activity_fragment"
            android:theme="@style/Theme.Interview01" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Launch Mode -->
        <activity
            android:name=".topic.launch_mode.LaunchModeActivity"
            android:exported="true"
            android:label="@string/title_activity_launch_mode"
            android:theme="@style/Theme.Interview01" />
        <activity
            android:name=".topic.launch_mode.activitys.StandardActivity"
            android:exported="false"
            android:launchMode="standard" />
        <activity
            android:name=".topic.launch_mode.activitys.SingleTopActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".topic.launch_mode.activitys.SingleTaskActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".topic.launch_mode.activitys.SingleInstanceActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
    </application>

</manifest>